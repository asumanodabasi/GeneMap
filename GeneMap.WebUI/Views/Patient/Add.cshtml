@using GeneMap.BLL.Data.Dto
@model PatientDto




<div calss="grid">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Hasta Ekle</div>
        </div>

        <div class="form-control">
            <form asp-action="Add" asp-controller="Patient" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Hasta Adı</label>
                    <input class="form-control" asp-for="@Model.Name" type="text" placeholder="Hasta Adı" aria-label="default input example">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Lastname" class="form-label">Hasta Soyadı</label>
                    <input class="form-control" asp-for="@Model.Lastname" type="text" placeholder="Hasta Soyadı" aria-label="default input example">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.NationalIdentity" class="form-label">Hasta TC</label>
                    <input class="form-control" asp-for="@Model.NationalIdentity" type="text" placeholder="Hasta TC" aria-label="default input example">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Complaints" class="form-lamel">Şikayetleri</label>
                    <textarea class="form-control" asp-for="@Model.Complaints" type="text" placeholder="Hastalık Adı" aria-label="default input example"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Symptoms" class="form-label">Semptomlar</label>
                    <input class="form-control" asp-for="@Model.Symptoms" type="text" placeholder="Semptomlar" aria-label="default input example">
                </div>
               <div class="mb-3">
                    <label asp-for="@Model.PatientRelative" class="form-label">Hasta Yakınları</label>
                    <input class="form-control" asp-for="@Model.PatientRelative" type="text" placeholder="Hasta Yakınları" aria-label="default input example">
                </div> 

                <div class="form-check">
                    <label asp-for="@Model.DiseaseStatus" class="form-label">Hastalık Durumu Devam Ediyor Mu</label>
                    <input class="form-check-input" type="checkbox" asp-for="@Model.DiseaseStatus" placeholder="Hastalık Durumu">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PatientStartDate" class="form-label">Hastalık Başlama Tarihi</label>
                    <input class="form-control" asp-for="@Model.PatientStartDate" type="date" placeholder="Hastalık Başlama Tarihi" aria-label="default input example">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PatientEndDate" class="form-label">Hastalık Bitiş Tarihi</label>
                    <input class="form-control" asp-for="@Model.PatientEndDate" type="date" placeholder="Hastalık Bitiş Tarihi">
                </div>

                <div class="float-end text-white p-2">
                    <button type="submit" class="btn btn-primary">Hasta Kaydet</button>
                </div>
            </form>
        </div>

    </div>
</div>


