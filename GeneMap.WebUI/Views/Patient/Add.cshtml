@using GeneMap.BLL.Data.Dto
@model PatientDto




<div calss="grid">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Hasta Ekle</div>
        </div>
        
            <div class="form-control">
                <form asp-action="Add" asp-controller="Patient" method="post">
                    <div class="mb-3">
                        <label asp-for="@Model.Name" class="form-label">Hasta Adı</label>
                        <input class="form-control" asp-for="@Model.Name" type="text" placeholder="Hasta Adı" aria-label="default input example">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Lastname" class="form-label">Hasta Soyadı</label>
                        <input class="form-control" asp-for="@Model.Lastname" type="text" placeholder="Hasta Soyadı" aria-label="default input example">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.IllnessName" class="form-lamel">Hastalık Adı</label>
                        <input class="form-control" asp-for="@Model.IllnessName" type="text" placeholder="Hastalık Adı" aria-label="default input example">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Symptoms" class="form-label">Semptomlar</label>
                        <input class="form-control" asp-for="@Model.Symptoms" type="text" placeholder="Semptomlar" aria-label="default input example">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.PatientRelatives" class="form-label">Hasta Yakınları</label>
                        <input class="form-control" asp-for="@Model.PatientRelatives" type="text" placeholder="Hasta Yakınları" aria-label="default input example">
                    </div>

                      <div class="mb-3">
                        <label asp-for="@Model.DiseaseStatus" class="form-label">Hastalık Durumu</label>
                        <input class="form-control" asp-for="@Model.DiseaseStatus" type="text" placeholder="Hastalık Durumu" aria-label="default input example">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.PatientStartDate" class="form-label">Hastalık Başlama Tarihi</label>
                        <input class="form-control" asp-for="@Model.PatientStartDate" type="text" placeholder="Hastalık Başlama Tarihi" aria-label="default input example">
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.PatientEndDate" class="form-label">Hastalık Bitiş Tarihi</label>
                        <input class="form-control" asp-for="@Model.PatientEndDate" type="text" placeholder="Hastalık Bitiş Tarihi" aria-label="default input example">
                    </div>

                <div class="float-end text-white p-2">
                        <button type="submit" class="btn btn-primary">Hasta Kaydet</button>
                    </div>
                </form>
            </div>
        
    </div>
</div>