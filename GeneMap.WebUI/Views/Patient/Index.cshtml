@using GeneMap.BLL.Data.Dto
@model List<PatientDto>

<div class="grid">
    <div class="card">
        <div class="card-header">
            <div class="card-title">Hastaları Listele</div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Hasta Adı</th>
                        <th scope="col">Hasta Soyadı</th>
                        <th scope="col">Hastalık Adı</th>
                        <th scope="col">Semptomlar</th>
                        <th scope="col">Hasta Yakını</th>
                        <th scope="col">Hastalık Durumu</th>
                        <th scope="col">Hastalık Başlama Tarihi</th>
                        <th scope="col">Hastalık Bitiş Tarihi</th>
                    </tr>
                </thead>
                <tbody>
                 @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Lastname</td>
                            <td>@item.IllnessName</td>
                            <td>@item.Symptoms</td>
                            <td>@item.PatientRelatives</td>
                            <td>@item.DiseaseStatus</td>
                            <td>@item.PatientStartDate</td>
                            <td>@item.PatientEndDate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>